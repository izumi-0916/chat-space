.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.item-box
        %li.item-box__icon
          = link_to new_group_path do
            %i{class: "fa fa-edit icons"}
        %li.item-box__icon  
          = link_to edit_user_path(current_user) do
            %i{class: "fa fa-cog icons"}
  .side-bar__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__text
            = group.show_last_message 